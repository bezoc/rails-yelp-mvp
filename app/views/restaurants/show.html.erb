<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<div class="mt-3">
  <%= link_to "Edit Restaurant", edit_restaurant_path(@restaurant), class: "btn btn-warning" %>
  <%= link_to "Delete", restaurant_path(@restaurant), data: { turbo_method: :delete,
                                                                         turbo_confirm: "Are you sure?" },
                                                                         class: "btn btn-outline-danger btn-sm" %>
  <%= link_to "Back to list", restaurants_path, class: "btn btn-secondary" %>
</div>

<hr>

<h2>Reviews</h2>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li class="mb-2">
      <strong>Rating:</strong> <%= review.rating %> <br>
      <%= review.content %>
      <%= link_to "Delete", restaurant_reviews_path(@restaurant, review), data: { turbo_method: :delete,
                                                                                 turbo_confirm: "Are you sure?" },
                                                                                 class: "btn-outline-danger" %>
    </li>
  <% end %>
</ul>

<hr>

<h3>New review</h3>
<%= render "reviews/new", restaurant: @restaurant, review: @review %>
